@model List<Categoria>

 <div class="card shadow border-0 my-4">
     <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
         <div class="row">
             <div class="col-12 text-center">
                 <h2 class="text-white py-2">Lista Categoria</h2>
             </div>
         </div>
     </div>
     <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-4   ">
              
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Categoria" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Crear Categoría
                </a>

            </div>
            <div class="col-6 text-end col-md-2">
                <a asp-controller="Categoria" asp-action="Index" class="btn btn-outline-primary border form-control">
                    Regresar
                </a>
            </div>
        </div>

    </div>
    <table class=" table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    nom_Categoria
                </th>
                <th>
                    Display_order
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
            {
                <tr>
                    <td>@obj.nom_categoria</td>
                    <td>@obj.DisplayOrder</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Categoria" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Editar
                            </a>
                            <a asp-controller="Categoria" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i> Eliminar
                            </a>
                        </div>
                    </td>
                </tr>
            }

        </tbody>
    </table>
  
     </div>
  
</div>
