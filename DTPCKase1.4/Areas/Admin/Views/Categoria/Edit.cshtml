@model Categoria
<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Editar categoria</h2>
            </div>
            </div>
        </div>
        <div class="card-body p-4">
        <form method="post">

            <div class="border p-3 mt-4">
                <div class="mb-3 row">
                    <label>Nombre Categoria</label>
                    <input asp-for="nom_categoria" class="form-control" />
                    <span asp-validation-for="nom_categoria" class="text-danger"></span>
                </div>
                <div class="mb-3 row">
                    <label>Orden</label>
                    <input asp-for="DisplayOrder" class="form-control" />
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Actualizar</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Categoria" asp-action="Index" class="btn btn-secondary border form-control">
                            Regresar a la Lista
                        </a>
                    </div>
                </div>


            </div>
        </form>
        </div>
</div>
       
   



@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}