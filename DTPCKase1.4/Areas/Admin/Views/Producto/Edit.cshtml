@model Producto
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Editar Producto</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="Id" hidden/>
            <div class="border p-3 mt-4">
                <div class="mb-3 row">
                    <div class="form-floating py-2 col-12">
                        <input asp-for="nom_prod" class="form-control border-0 shadow" />
                        <label asp-for="nom_prod" class="ms-1"></label>
                        <span asp-validation-for="nom_prod" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="desc_prod" class="form-control border-0 shadow" />
                        <label asp-for="desc_prod" class="ms-2"></label>
                        <span asp-validation-for="desc_prod" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="stck_prod" class="form-control border-0 shadow" />
                        <label asp-for="stck_prod" class="ms-2"></label>
                        <span asp-validation-for="stck_prod" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="prec_prod" class="form-control border-0 shadow" />
                        <label asp-for="prec_prod" class="ms-2"></label>
                        <span asp-validation-for="prec_prod" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="CategoriaId" class="form-control border-0 shadow" />
                        <label asp-for="CategoriaId" class="ms-2"></label>
                        <span asp-validation-for="CategoriaId" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="desc_prod" class="form-control border-0 shadow" />
                        <label asp-for="desc_prod" class="ms-2"></label>
                        <span asp-validation-for="desc_prod" class="text-danger"></span>
                    </div>
                <div class="row">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Actualizar</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Producto" asp-action="Index" class="btn btn-secondary border form-control">
                            Regresar a la Lista
                        </a>
                    </div>
                </div>


            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}